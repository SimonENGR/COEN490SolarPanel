<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setup Solar Tracker"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tv_prov_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initializing Bluetooth..."
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <ProgressBar
        android:id="@+id/pb_prov_scanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:id="@+id/layout_prov_credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter 2.4GHz WiFi Details:"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_prov_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WiFi Name (SSID)"
            android:inputType="text"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/et_prov_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WiFi Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_prov_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to WiFi"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>